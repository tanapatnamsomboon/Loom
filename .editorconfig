root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,cxx,cc,c,hpp,hxx,h,hh,inl,ipp}]
indent_style = space
indent_size = 4
tab_width = 4

[*.json]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false